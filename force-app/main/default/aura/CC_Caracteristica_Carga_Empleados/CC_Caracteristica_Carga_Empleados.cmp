<aura:component implements="force:lightningQuickActionWithoutHeader,force:hasRecordId">
	<aura:attribute name="recordId" type="Id" />
	<lightning:card title="Cargar empleados" iconName="action:share_file">
		<br/>
		<div>
            <p>
                Seleccione un fichero <b>.txt</b> que contenga los identificadores a cargar. Cada identificador debe ser una <b>matrícula</b> y estar separado por un salto de línea.<br/>
                <br/>
                <div>
                    <div style="display:inline-block; vertical-align: top;">Ejemplo:</div>
                    <div style="padding-left: 10px; padding-right: 10px; padding-top: 8px; padding-bottom: 8px; margin-left: 20px; border:1px solid lightgray; display:inline-block;">
                        <code>U0178945</code><br/>
                        <code>U0145612</code><br/>
                        <code>U0132456</code><br/>
                    </div>
                </div>
            </p>
        </div>
        <br/>
		<c:cc_Caracteristica_Carga name="cc_Caracteristica_Carga" recordId="{!v.recordId}" onclickcancelar="{!c.handleClickCancelar}" onclickaceptar="{!c.handleClickAceptar}" onshowlogtoast="{!c.handleShowLogToast}"/>
	</lightning:card>
</aura:component>
<aura:component implements="lightning:recordHomeTemplate" description="Cabecera, sección izquierda (con cabecera y dos columnas) y sección derecha.">

	<aura:attribute name="top" type="Aura.Component[]" />
	<aura:attribute name="left" type="Aura.Component[]" />
	<aura:attribute name="leftCol1" type="Aura.Component[]" />
	<aura:attribute name="leftCol2" type="Aura.Component[]" />
	<aura:attribute name="right" type="Aura.Component[]" />

	<div>
		<!-- Sección superior -->
		<div>
			{!v.top}
		</div>

		<div class="slds-grid slds-gutters_direct-x-small">

			<!-- Sección izquierda -->
			<div class="slds-col slds-size_5-of-7">

				<!-- Sección izquierda: cabecera -->
				<div class="slds-var-p-bottom_large">
					{!v.left}
				</div>

				<div class="slds-grid slds-gutters_direct-x-small">

					<!-- Sección izquierda: columna 1 -->
					<div class="slds-col slds-size_5-of-12">
						{!v.leftCol1}
					</div>

					<!-- Sección izquierda: columna 2 -->
					<div class="slds-col slds-size_7-of-12">
						{!v.leftCol2}
					</div>
				</div>
			</div>

			<!-- Sección derecha-->
			<div class="slds-col slds-size_2-of-7">
				{!v.right}
			</div>
		</div>
	</div>

</aura:component>
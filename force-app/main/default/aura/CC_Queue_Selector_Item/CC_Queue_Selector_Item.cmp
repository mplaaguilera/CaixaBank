<aura:component controller="CC_Queue_Selector_Controler" implements="force:appHostable,flexipage:availableForAllPageTypes,force:lightningQuickAction" access="global">
    <aura:attribute name="caso" type="Object" />
    <aura:registerEvent name="refrescar" type="c:CC_Queue_Selector_Event"/>
    <lightning:utilityBarAPI aura:id="buzonbar" />


    
    <lightning:card variant="Narrow"  title="{!v.caso.Subject}" iconName="standard:case">
        <aura:set attribute="actions">
             
            <lightning:buttonIcon iconName="utility:preview" variant="border-filled" onclick="{! c.handlePreview }" />
            <lightning:buttonIcon iconName="utility:adduser" variant="border-filled" onclick="{! c.handleClick }" />

        </aura:set>
        <p class="slds-p-horizontal_small">
            
            <table><tr>
                <td>{!v.caso.CaseNumber}</td>
                <td><lightning:formattedRichText value="{!v.caso.Flag__c}"></lightning:formattedRichText></td>
                <td>{!v.caso.Status}</td>
                </tr>
            </table>
            
            <p>{!v.caso.Contact.Name}</p>
            <p><lightning:formattedDateTime value="{!v.caso.CreatedDate}" year="numeric" month="numeric" day="numeric"  hour="2-digit" minute="2-digit"/></p>


        </p>
    </lightning:card>    
    
</aura:component>
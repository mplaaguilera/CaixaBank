<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>CC_Centro_Integrador_No_Inactivo</fullName>
    <active>true</active>
    <errorConditionFormula>PRIORVALUE( CC_Centro_Integrador__c ) != CC_Centro_Integrador__c &amp;&amp;  CC_Centro_Integrador__r.CC_Inactivo__c = TRUE</errorConditionFormula>
    <errorDisplayField>CC_Centro_Integrador__c</errorDisplayField>
    <errorMessage>El Centro Integrador seleccionado no debe estar marcado como inactivo.</errorMessage>
</ValidationRule>

<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>CC_Reabrir_Agrupador</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISCHANGED(CC_Reabrir_Operativa__c),
				ISPICKVAL(CC_Estado__c, &quot;Activo&quot;),
    NOT(ISPICKVAL(PRIORVALUE(CC_Estado__c), &quot;Cerrado&quot;)),
				NOT(ISPICKVAL(PRIORVALUE(CC_Estado__c), &quot;Rechazado&quot;))	
			)</errorConditionFormula>
    <errorMessage>Solo se puede reabrir un agrupador cuando el estado sea &quot;Cerrado&quot; o &quot;Rechazado&quot;</errorMessage>
</ValidationRule>

<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>CIBE_ChangeExpiredCIBStatus</fullName>
    <active>false</active>
    <errorConditionFormula>AND(
		$Profile.Name = &apos;CIBE_Gestor&apos;,
		ISCHANGED(CSBD_Evento_Estado__c),
		ISPICKVAL(PRIORVALUE(CSBD_Evento_Estado__c) , &apos;Vencida&apos;),
		 ActivityDate &lt;  TODAY() 
)</errorConditionFormula>
    <errorMessage>No se puede cambiar el estado de una cita Vencida si la fecha de inicio es menor a la actual</errorMessage>
</ValidationRule>

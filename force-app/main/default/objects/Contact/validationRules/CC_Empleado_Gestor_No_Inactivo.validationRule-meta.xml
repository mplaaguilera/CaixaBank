<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>CC_Empleado_Gestor_No_Inactivo</fullName>
    <active>true</active>
    <errorConditionFormula>PRIORVALUE( CC_EmpleadoGestorId__c ) != CC_EmpleadoGestorId__c &amp;&amp;
 CC_EmpleadoGestorId__r.CC_Inactivo__c = TRUE</errorConditionFormula>
    <errorDisplayField>CC_EmpleadoGestorId__c</errorDisplayField>
    <errorMessage>El empleado gestor seleccionado no debe estar marcado como inactivo.</errorMessage>
</ValidationRule>

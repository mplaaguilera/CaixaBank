<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>CC_Colaborador_No_AccountId</fullName>
    <active>true</active>
    <errorConditionFormula>AND(RecordType.DeveloperName == &apos;CC_Colaborador&apos;, ISBLANK(AccountId))</errorConditionFormula>
    <errorDisplayField>AccountId</errorDisplayField>
    <errorMessage>El contacto debe tener una cuenta asociada.</errorMessage>
</ValidationRule>

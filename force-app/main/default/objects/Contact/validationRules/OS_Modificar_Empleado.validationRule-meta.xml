<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>OS_Modificar_Empleado</fullName>
    <active>true</active>
    <description>Solo permite la creación de Empleados a los usuairos de COPS</description>
    <errorConditionFormula>RecordType.DeveloperName == &apos;OS_Buzon_Contact&apos; &amp;&amp; 
$Profile.Name &lt;&gt; &apos;OS_Responsable&apos; &amp;&amp;
$Profile.Name &lt;&gt; &apos;OS_Operador&apos; &amp;&amp;
$Profile.Name &lt;&gt; &apos;System Administrator&apos; &amp;&amp;
$Profile.Name &lt;&gt; &apos;Administrador del sistema&apos;</errorConditionFormula>
    <errorMessage>No se permite la creación o modificación de un Empleado COPS.</errorMessage>
</ValidationRule>

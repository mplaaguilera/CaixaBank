<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>SEG_ValidacionNegocio</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
					 ISPICKVAL(SEG_Reglas_Clasificacion__r.CBK_Negocio__c , &quot;Segmentos&quot;),
					 OR(ISCHANGED(CBK_Negocio__c),ISNEW()), 
					 NOT(ISPICKVAL(CBK_Negocio__c, &quot;Segmentos&quot;))
)</errorConditionFormula>
    <errorDisplayField>CBK_Negocio__c</errorDisplayField>
    <errorMessage>El negocio informado no es correcto.</errorMessage>
</ValidationRule>

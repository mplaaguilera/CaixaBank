<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>SPV_ValidarPasoNegociacion</fullName>
    <active>false</active>
    <description>Validation rule que controla que la pretensión no pase al estado de negociación si su reclamación no está en ese estado</description>
    <errorConditionFormula>AND(
       AND(
            !$Permission.CBK_BypassValidationRules,
            !$Permission.SPV_BypassValidationRules
        ),
        $UserRole.DeveloperName = &apos;SPV_General&apos;,
        RecordType.DeveloperName = &apos;SPV_Pretension&apos;,
        ISPICKVAL(Status, &apos;SAC_007&apos;),
        NOT(ISPICKVAL(SAC_Reclamacion__r.SEG_Subestado__c, &apos;Negociacion&apos;))
    )</errorConditionFormula>
    <errorMessage>No se puede pasar al estado de negociación desde la pretensión, hágalo desde la reclamación.</errorMessage>
</ValidationRule>

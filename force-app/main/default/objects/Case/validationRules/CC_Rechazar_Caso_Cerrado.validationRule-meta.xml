<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>CC_Rechazar_Caso_Cerrado</fullName>
    <active>true</active>
    <errorConditionFormula>OR(
AND( 
ISCHANGED(Status), 
ISPICKVAL(Status,&quot;Rechazado&quot;),
ISPICKVAL(PRIORVALUE(Status), &apos;Cerrado&apos;)))</errorConditionFormula>
    <errorMessage>No se puede rechazar un caso cerrado.</errorMessage>
</ValidationRule>

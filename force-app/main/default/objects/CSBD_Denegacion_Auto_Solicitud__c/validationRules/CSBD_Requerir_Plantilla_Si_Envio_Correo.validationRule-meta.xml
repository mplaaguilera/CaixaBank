<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>CSBD_Requerir_Plantilla_Si_Envio_Correo</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
   CSBD_Enviar_Correo_Auto__c,
   OR(
      ISBLANK(CSBD_Plantilla_Correo_Castellano__c),
      ISBLANK(CSBD_Plantilla_Correo_Catalan__c)
   )
)</errorConditionFormula>
    <errorDisplayField>CSBD_Plantilla_Correo_Catalan__c</errorDisplayField>
    <errorMessage>Debe informar las plantillas que se usarán para el envío de correo a cliente en todos los idiomas.</errorMessage>
</ValidationRule>

<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>CSBD_Requerir_Resolucion_Si_Denegar</fullName>
    <active>true</active>
    <errorConditionFormula>AND(CSBD_Denegada__c, ISBLANK(CSBD_Resolucion__c))</errorConditionFormula>
    <errorDisplayField>CSBD_Resolucion__c</errorDisplayField>
    <errorMessage>Debe informar la resolución que se usará para el cierre de la oportunidad</errorMessage>
</ValidationRule>

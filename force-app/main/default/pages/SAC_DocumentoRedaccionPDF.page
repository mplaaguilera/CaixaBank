<apex:page renderAs="pdf" applyBodyTag="false" showHeader="false" sidebar="false" standardStylesheets="false" applyHtmlTag="false" standardController="SAC_DocumentoEnvio__c">
      <head>
            <style type="text/css" media="print">
                  @page {
                        margin-top:     3cm;
                        margin-bottom:    5cm;
                        margin-left:    3cm;
                        margin-right:    2.5cm;
                        line-height: normal;

                        @top-center {
                              width: 100%;
                              content: element(header);
                        }
                        @bottom-left {
                              width: 100%;
                              content: element(footer);
                        }

                        background-image: url(/resource/SAC_CartaPlantilla);
                        background-position: left 100px;
                        background-repeat: no-repeat;
                  }
                  div.header {
                        display: block;
                        position: running(header);
                  }
                  div.footer {
                        display: block;
                        text-align: justify;
                        position: running(footer);
                  }
                  .pagenumber:before {
                        content: counter(page);
                  }
                  /* div.body{ 
                        font-family: 'Arial Unicode MS'; } */
                  .pagecount:before {
                        content: counter(pages);
                  }      
                  /* p {
                        margin-bottom: 0;
                        margin-top: 0;
                  }             */
            </style>
      </head>
      <div class="header">
            <apex:outputText value="{!SAC_DocumentoEnvio__c.SAC_Header__c}" escape="false" ></apex:outputText>
      </div>
      <div style="float: right;">
            
      </div>
      <div class="footer">
            <apex:outputText value="{!SAC_DocumentoEnvio__c.SAC_Footer__c}" escape="false" ></apex:outputText>
      </div>
      <div class="body">
            <apex:outputText value="{!SAC_DocumentoEnvio__c.SAC_DocPDF__c}" escape="false" ></apex:outputText>
      </div>
</apex:page>
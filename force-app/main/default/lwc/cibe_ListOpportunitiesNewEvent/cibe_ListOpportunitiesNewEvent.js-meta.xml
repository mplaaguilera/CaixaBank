<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>55.0</apiVersion>
    <masterLabel>Lista de oportunidades del evento en el alta</masterLabel>
    <isExposed>true</isExposed>
    <targets>
        <target>lightning__FlowScreen</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__FlowScreen">
            <property name="recid" type="String" label="Id del Evento" description="Event Id" role="inputOnly"/>
            <property name="opportunities" type="@salesforce/schema/Opportunity[]" label="Opportunity Records" role="outputOnly"/>
            <property name="sobjname" type="String" label="Object API Name" description="Indica el nombre API del objeto base de las oportunidades" default="Event"/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
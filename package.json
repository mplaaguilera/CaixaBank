{
	"name": "salesforce-app",
	"private": true,
	"version": "1.0.0",
	"description": "Salesforce App",
	"type": "module",
	"scripts": {
		"lint": "npm run lint:lwc",
		"lint:lwc": "eslint force-app/main/default/lwc",
		"test": "sf apex run -f scripts/apex/CSBD_RunTestSuite.apex",
		"tail": "node ./scripts/js/sf-tail-debug.js",
		"browser-tools": "concurrently -k -s first -n server,mcp -c blue,green \"npx @agentdeskai/browser-tools-server@latest\" \"wait-on http://localhost:PORT && npx @agentdeskai/browser-tools-mcp@1.2.0\"",
		"precommit": "echo 'No precommit script defined'"
	},
	"devDependencies": {
		"@babel/core": "^7.28.3",
		"@babel/eslint-parser": "^7.28.0",
		"@babel/plugin-proposal-class-properties": "^7.18.6",
		"@babel/plugin-proposal-decorators": "^7.28.0",
		"@babel/plugin-transform-async-generator-functions": "^7.28.0",
		"@babel/plugin-transform-class-properties": "^7.27.1",
		"@babel/plugin-transform-dynamic-import": "^7.27.1",
		"@babel/plugin-transform-object-rest-spread": "^7.28.0",
		"@babel/preset-env": "^7.28.3",
		"@eslint/js": "^9.33.0",
		"@lwc/eslint-plugin-lwc": "^3.2.0",
		"@lwc/eslint-plugin-lwc-platform": "^6.1.0",
		"@salesforce/eslint-config-lwc": "^4.0.0",
		"@salesforce/eslint-plugin-aura": "^3.0.0",
		"@salesforce/eslint-plugin-lightning": "^2.0.0",
		"@salesforce/sfdx-lwc-jest": "^3.1.0",
		"concurrently": "^9.1.2",
		"eslint": "^9.33.0",
		"eslint-plugin-import": "^2.32.0",
		"eslint-plugin-jest": "^29.0.1",
		"glob": "^11.0.3",
		"globals": "^16.3.0",
		"husky": "^8.0.3",
		"lint-staged": "^15.1.0",
		"prettier": "3.6.2",
		"prettier-plugin-apex": "2.2.6",
		"rimraf": "^6.0.1"
	},
	"lint-staged": {
		"**/*.{cls,cmp,component,css,html,json,md,page,trigger,xml,yaml,yml}": [
			"prettier --write"
		]
	}
}

{
	"name": "salesforce-app",
	"private": true,
	"version": "1.0.0",
	"description": "Salesforce App",
	"scripts": {
		"test": "sf apex run -f scripts/apex/CSBD_RunTestSuite.apex",
		"tail": "node ./scripts/js/sf-tail-debug.js",
		"browser-tools": "concurrently -k -s first -n server,mcp -c blue,green \"npx @agentdeskai/browser-tools-server@latest\" \"wait-on http://localhost:PORT && npx @agentdeskai/browser-tools-mcp@1.2.0\"",
		"precommit": "echo 'No precommit script defined'"
	},
	"devDependencies": {
		"@babel/core": "^7.27.4",
		"@babel/eslint-parser": "^7.27.5",
		"@eslint/js": "^9.28.0",
		"@lwc/eslint-plugin-lwc": "^2.2.0",
		"@salesforce/eslint-config-lwc": "^3.7.2",
		"@salesforce/eslint-plugin-aura": "^2.1.0",
		"@salesforce/eslint-plugin-lightning": "^1.0.0",
		"@salesforce/sfdx-lwc-jest": "^3.1.0",
		"concurrently": "^9.1.2",
		"eslint": "^8.57.1",
		"eslint-plugin-import": "^2.29.1",
		"eslint-plugin-jest": "^27.9.0",
		"globals": "^16.2.0",
		"husky": "^8.0.3",
		"lint-staged": "^15.1.0",
		"prettier": "2.0.0",
		"prettier-plugin-apex": "^1.0.0"
	},
	"lint-staged": {
		"**/*.{cls,cmp,component,css,html,js,json,md,page,trigger,xml,yaml,yml}": [
			"prettier --write"
		],
		"**/{aura,lwc}/**/*.js": [
			"eslint"
		]
	},
	"dependencies": {
		"eslint-plugin-marc": "file:../eslint-plugin-marc",
		"puppeteer": "^24.12.1"
	}
}
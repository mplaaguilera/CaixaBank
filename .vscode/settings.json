{
	"search.exclude": {
		"**/node_modules": true,
		"**/bower_components": true,
		"**/.sfdx": true
	},
	"workbench.colorCustomizations": {
		"editor.selectionBackground": "#e788ff7c",
		"editor.selectionHighlightBackground": "#ff00005b",
		"tab.activeForeground": "#ffffff",
		"tab.activeBorder": "#006bc9",
		"tab.activeModifiedBorder": "#f4a238",
		"statusBar.background": null,
		"activityBar.background": null
	},
	"eslint.useFlatConfig": false,
	"salesforce.einsteinForDevelopers.enableAutocompletions": false,
	"salesforce.einsteinForDevelopers.autocompletionLength": "Short",
	"workbench.externalBrowser": "chrome",
	"CodeGPT.apiKey": "CodeGPT Plus Beta",
	"salesforcedx-vscode-slds.enhancements.autoSuggest": true,
	"sarif-viewer.connectToGithubCodeScanning": "off",
	"salesforce.einsteinForDevelopers.enable": true,
	"chat.mcp.discovery.enabled": false,
	"chat.mcp.enabled": true,
	"mcp": {
		"inputs": [],
		"servers": {
			"ibm-salesforce-mcp": {
				"command": "node",
				"args": [
					"/Users/marcpla/Documents/Feina/Projectes/mcp/mcp_salesforce/index.js"
				],
				"env": {
					"SF_MCP_AGENTFORCE_AGENT_ID": "0XxKN0000008OKp",
					"WORKSPACE_FOLDER_PATHS": "/Users/marcpla/Documents/Feina/Projectes/mcp/mcp_salesforce"
				},
				"dev": {
					"watch": "src/**/*.ts",
					"debug": {
						"type": "node"
					}
				}
			},
			"everything": {
				"command": "npx",
				"args": [
					"-y",
					"@modelcontextprotocol/server-everything"
				],
				"dev": {
					"debug": {
						"type": "node"
					},
					"watch": "src/**/*.ts"
				}
			}
		}
	},
	"squarl.groups": [
		{
			"id": "salesforce",
			"name": "Salesforce"
		},
		{
			"id": "component-blueprints",
			"name": "Component blueprints"
		},
		{
			"id": "lightning-design-system",
			"name": "Lightning Design System"
		}
	],
	"squarl.bookmarks": [
		{
			"name": "> Lightning Design System v1",
			"path": "https://v1.lightningdesignsystem.com",
			"description": "",
			"type": "link",
			"groupId": "lightning-design-system"
		},
		{
			"name": "> Icones",
			"path": "https://v1.lightningdesignsystem.com/icons/",
			"description": "",
			"type": "link",
			"groupId": "lightning-design-system"
		},
		{
			"name": "Textarea",
			"path": "https://v1.lightningdesignsystem.com/components/textarea/",
			"description": "",
			"type": "link",
			"groupId": "lightning-design-system"
		},
		{
			"name": "Button",
			"path": "https://v1.lightningdesignsystem.com/components/buttons/",
			"description": "",
			"type": "link",
			"groupId": "lightning-design-system"
		}
	],
	"salesforce.einsteinForDevelopers.enableAutocompletionsByFileType": {
		"apex": false,
		"javascript": true,
		"css": true,
		"html": true
	},
	"git.decorations.enabled": false,
	"explorer.decorations.badges": false,
	"explorer.decorations.colors": false,
	"explorer.fileNesting.enabled": true,
	"actionButtons": {

		"commands": [
			{
				"name": "$(compare-changes)",
				"useVsCodeApi": true,
				"command": "sf.diff",
				"color": "#d3d2c8"
			},
			{
				"name": "$(cloud-download)",
				"useVsCodeApi": true,
				"command": "sf.retrieve.current.source.file",
				"color": "#e2e1d8"
			},
			{
				"name": "$(symbol-method)",
				"useVsCodeApi": false,
				"command": "open https://caixabankcc--devservice.sandbox.my.salesforce-setup.com/lightning/setup/ObjectManager/home",
				"color": "#94adc3"
			},
			{
				"name": "$(console)",
				"useVsCodeApi": false,
				"command": "open https://caixabankcc--devservice.sandbox.my.salesforce.com/_ui/common/apex/debug/ApexCSIPage",
				"color": "#94adc3"
			},
			{
				"name": "$(test-view-icon)",
                "useVsCodeApi": true,
                "command": "workbench.action.tasks.runTask",
                "args": ["npm: tail"],
                "color": "#a0a0d0"
			}
		],
		"defaultColor": "currentColor",
		"reloadButton": null,
		"loadNpmCommands": false
	},
	"conventionalCommits.scopes": [
		"default"
	],
	"typescript.tsdk": "node_modules/typescript/lib",
	"chat.mcp.serverSampling": {
		"CaixaBank/.vscode/mcp.json: ibm-salesforce-mcp": {
			"allowedModels": [
				"github.copilot-chat/claude-sonnet-4"
			]
		}
	}
}